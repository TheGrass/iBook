<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bar"
        android:background="@color/bottom_background">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/t18"
            android:text="自定义"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            />
        <Button
            android:id="@+id/btn_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/t18"
            android:text="返回"
            android:background="@color/bottom_background"
            android:textColor="@color/text_color_3" />
        <Button
            android:id="@+id/btn_right"
            android:text="保存"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/t18"
            android:background="@color/bottom_background"
            android:textColor="@color/text_color_3" />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/user_custom"
        android:gravity="center"
        android:textSize="@dimen/t22"
        android:textColor="@color/text_color_1"
        android:layout_marginTop="@dimen/t30"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:layout_width="@dimen/t0"
        android:layout_height="wrap_content"
        android:text="阅读"
        android:gravity="center"
        android:layout_weight="1"
        android:textSize="@dimen/t18"
        android:textColor="@color/text_color"
        android:padding="@dimen/t18"/>
    <TextView
        android:layout_width="@dimen/t0"
        android:layout_height="wrap_content"
        android:text="弹幕"
        android:gravity="center"
        android:layout_weight="1"
        android:textSize="@dimen/t18"
        android:textColor="@color/text_color"
        android:padding="@dimen/t18"/>
    <TextView
        android:layout_width="@dimen/t0"
        android:layout_height="wrap_content"
        android:text="书吧"
        android:gravity="center"
        android:layout_weight="1"
        android:textSize="@dimen/t18"
        android:textColor="@color/text_color"
        android:padding="@dimen/t18"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="@dimen/t0"
            android:layout_height="wrap_content"
            android:text="游戏"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="@dimen/t18"
            android:textColor="@color/text_color"
            android:padding="@dimen/t18"/>
        <TextView
            android:layout_width="@dimen/t0"
            android:layout_height="wrap_content"
            android:text="书单"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="@dimen/t18"
            android:textColor="@color/text_color"
            android:padding="@dimen/t18"/>
        <TextView
            android:layout_width="@dimen/t0"
            android:layout_height="wrap_content"
            android:text="搜索"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="@dimen/t18"
            android:textColor="@color/text_color"
            android:padding="@dimen/t18"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="@dimen/t0"
            android:layout_height="wrap_content"
            android:text="书架"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="@dimen/t18"
            android:textColor="@color/text_color"
            android:padding="@dimen/t18"/>
        <TextView
            android:layout_width="@dimen/t0"
            android:layout_height="wrap_content"
            android:text="排行"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="@dimen/t18"
            android:textColor="@color/text_color"
            android:padding="@dimen/t18"/>
        <TextView
            android:layout_width="@dimen/t0"
            android:layout_height="wrap_content"
            android:text="推荐"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="@dimen/t18"
            android:textColor="@color/text_color"
            android:padding="@dimen/t18"/>
    </LinearLayout>
</LinearLayout>